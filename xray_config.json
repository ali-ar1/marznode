{
    "log": {
        "loglevel": "warning"
    },
    "dns": {
        "servers": [
            "8.8.8.8",
            "8.8.4.4",
            "1.1.1.1",
            "1.0.0.1"
        ],
        "queryStrategy": "ForceIPv4"
    },
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            },
            {
                "type": "field",
                "network": "udp",
                "port": "443",
                "outboundTag": "block"
            }
        ]
    },
    "inbounds": [
        {
            "tag": "vmess",
            "listen": "0.0.0.0",
            "port": 2088,
            "protocol": "vmess",
            "settings": {},
            "streamSettings": {
                "network": "tcp",
                "tcpSettings": {
                    "header": {
                        "type": "http",
                        "response": {
                            "version": "1.1",
                            "status": "200",
                            "reason": "OK",
                            "headers": {
                                "Content-Type": [
                                    "application/octet-stream",
                                    "video/mpeg",
                                    "application/x-msdownload",
                                    "text/html",
                                    "application/x-shockwave-flash"
                                ],
                                "Transfer-Encoding": [
                                    "chunked"
                                ],
                                "Connection": [
                                    "keep-alive"
                                ],
                                "Pragma": "no-cache"
                            }
                        }
                    }
                },
                "security": "none"
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "tag": "DIRECT",
            "settings": {
                "domainStrategy": "ForceIPv4"
            },
            "sockopt": {
                "mark": 0,
                "tcpMaxSeg": 1440,
                "tcpFastOpen": true,
                "tproxy": "off",
                "domainStrategy": "UseIPv4",
                "dialerProxy": "",
                "acceptProxyProtocol": true,
                "tcpKeepAliveInterval": 60,
                "tcpKeepAliveIdle": 300,
                "tcpUserTimeout": 10000,
                "tcpCongestion": "bbr",
                "interface": "",
                "v6only": false,
                "tcpWindowClamp": 600,
                "tcpMptcp": false,
                "tcpNoDelay": true
            }
        },
        {
            "protocol": "blackhole",
            "tag": "block"
        }
    ]
}
